{% extends 'base.html.twig' %}

{% block title %}Recherche de Burgers{% endblock %}

{% block body %}
    <h1>Recherche de burgers contenant l'ingrédient : "{{ ingredient }}"</h1>

    {% if burgers is empty %}
        <p>Aucun burger ne contient cet ingrédient.</p>
    {% else %}
        <ul>
            {% for burger in burgers %}
                <main class="container">
                    <div class="row">
                        <div class="col s12 m8 offset-m2">
                            <div class="card">
                                <div class="card-image">
                                    <img src="{{ burger.getImage() }}" alt="Image du {{ burger.name }}">
                                </div>
                                <div class="card-content">
                                    <h2 class="center-align">{{ burger.name }}</h2>
                                    <p>Numéro du burger : {{ burger.id }}</p>
                                    <p>{{ burger.description }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}